@model LivrariaOnline.ViewModels.IndexViewModel
@{
	ViewData["Title"] = "Home Page";
}



<section id="sectionindexcss">
	<header>
		<nav class="navbar bg-body-tertiary" style="display:block;">
			<div class="text-center">
				<h2 id="h2_div">Welcome to Livraria Online</h2>
			</div>
			<div class="searchbar">
				<form class="d-flex" role="search">
					<input class="form-control me-2" type="search" value="@Model.Search" placeholder="Search" aria-label="Search" name="Search">
					<button class="btn btn-light btn-outline-secondary" value="Search" type="submit">Search</button>
				</form>
			</div>
		</nav>
	</header>
	<hr />
	<p class="section_p text-center" style="font-size: 1.3rem; padding-left: 0;">
		Welcome to LivrariaOnline. Here you can buy all the books you want, but first you have to add that book :)
	</p>
</section>

	<body>
		<hr />
		<div class="card-group flex-container">
			@foreach (Book book in Model.Books)
			{
				<a style="color: black; text-decoration: none;" asp-controller="Home" asp-action="BookDetails" asp-route-id="@book.Id">
					<div id="div_card" class="card BookCard flex-item" style="border: 1px solid rgba(0,0,0,.125);">
						<img src="@book.CoverImageUrl" class="card-img-top bookCover">

						<div class="card-body">
							<h5 class="card-title">@book.Title</h5>
							<p class="card-text">@book.Author</p>
						</div>
					<div class="card-footer border-success">
							<small class="text-body-secondary" style="align-self: flex-start">@book.Price &euro;</small>
						</div>
					</div>
				</a>
			}
		</div>
	</body>
