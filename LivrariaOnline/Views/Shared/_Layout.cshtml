<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LivrariaOnline</title>
    <link rel="icon" href="@Url.Content("~/wwwroot/favicon.ico")" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LivrariaOnline.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <button id="backToTop" title="Go to top"><i class="fa-solid fa-arrow-up"></i></button>

    <header class ="header" style="background-color:white">
        <nav class="navbar navbar-expand-lg bg-body-tertiary ">

            <div class="container" style="margin-left: 0;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" >
                    <img src="~/img/img1.png" width="50" height="40">
                </a>
            </div>
            <div class="div_container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity != null && User.Identity.IsAuthenticated) {
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Books" asp-action="Backoffice">Backoffice</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-bottom: 0;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer" id="footer">
        <div class="container">
            &copy; 2025 - LivrariaOnline
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
